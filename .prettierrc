{
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/app",
    "^@/pages",
    "^@/widgets",
    "^@/features",
    "^@/entities",
    "^@/shared",
    "^[./](?!.*\\.(css|scss|sass)$)",
    ".(css|scss|sass)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
